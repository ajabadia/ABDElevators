{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "../../src/*"
            ],
            "@abd/platform-core": [
                "../platform-core/src/index.ts"
            ],
            "@abd/platform-core/*": [
                "../platform-core/src/*"
            ],
            "@abd/workflow-engine": [
                "./src/index.ts"
            ],
            "@abd/workflow-engine/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}